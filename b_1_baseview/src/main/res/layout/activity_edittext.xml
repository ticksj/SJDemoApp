<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".baseview.EdittextActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".baseview.EdittextActivity">

        <EditText
            style="@style/edittext_style"
            android:hint="android:imeOptions=actionNext"
            android:imeOptions="actionNext"/>

        <EditText
            style="@style/edittext_style"
            android:hint="android:imeOptions=actionGo"
            android:imeOptions="actionGo"/>

        <EditText
            style="@style/edittext_style"
            android:hint="android:imeOptions=actionDone"
            android:imeOptions="actionDone"/>

        <EditText
            style="@style/edittext_style"
            android:hint="android:imeOptions=actionPrevious"
            android:imeOptions="actionPrevious"/>

        <EditText
            style="@style/edittext_style"
            android:hint="android:imeOptions=actionNone"
            android:imeOptions="actionNone"/>

        <EditText
            style="@style/edittext_style"
            android:hint="android:imeOptions=actionSearch"
            android:imeOptions="actionSearch"/>

        <EditText
            style="@style/edittext_style"
            android:hint="android:imeOptions=actionSend"
            android:imeOptions="actionSend"/>

        <EditText
            style="@style/edittext_style"
            android:hint="android:imeOptions=actionUnspecified"
            android:imeOptions="actionUnspecified"/>

    </LinearLayout>
</ScrollView>